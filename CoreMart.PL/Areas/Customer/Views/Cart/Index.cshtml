@model IEnumerable<ShoppingCart>

@{
    ViewData["Title"] = "Your Cart";
    
    var totalAmount = ViewData["TotalAmount"] != null ? (decimal)ViewData["TotalAmount"] : 0;
}



<h2>@ViewData["Title"]</h2>


<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var itemTotal = item.Product.Price * item.Count;
            
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Product.Price EGP</td>
                <td>@item.Count</td>
                <td>@(item.Product.Price * item.Count)</td>
                <td>
                    <form asp-action="Remove" asp-route-id="@item.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />

<div class="container">
    <div class="text-end">
        <h4>Total :  <strong>@totalAmount EGP</strong> </h4>
    </div>
    <a asp-controller="Order" asp-action="Checkout" class="btn btn-success">Proceed to Checkout</a>
</div>
