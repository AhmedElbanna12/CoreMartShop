@model ShoppingCartVM

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Shopping Cart</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            background-color: #f8f9fa;
        }

        .cart-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 15px;
        }

        .cart-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #eee;
        }

        .cart-title {
            font-size: 2rem;
            font-weight: 600;
        }

        .cart-item {
            display: flex;
            padding: 1.5rem 0;
            border-bottom: 1px solid #eee;
        }

        .item-image {
            width: 120px;
            height: 120px;
            object-fit: contain;
            margin-right: 1.5rem;
        }

        .item-details {
            flex-grow: 1;
        }

        .item-name {
            font-size: 1.2rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .item-description {
            color: #6c757d;
            margin-bottom: 1rem;
        }

        .item-price {
            font-size: 1.2rem;
            font-weight: 600;
            color: #212529;
        }

        .item-quantity {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin: 1rem 0;
        }

        .quantity-btn {
            width: 30px;
            height: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 1px solid #dee2e6;
            background: #f8f9fa;
            cursor: pointer;
        }

        .remove-btn {
            color: #dc3545;
            background: none;
            border: none;
            cursor: pointer;
        }

        .summary-card {
            background: #fff;
            border-radius: 0.5rem;
            padding: 1.5rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075);
        }

        .summary-title {
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
            font-weight: 600;
        }

        .summary-total {
            display: flex;
            justify-content: space-between;
            font-size: 1.2rem;
            font-weight: 600;
            padding: 1rem 0;
            border-top: 1px solid #eee;
        }

        .checkout-btn {
            width: 100%;
            padding: 0.75rem;
            font-size: 1.1rem;
        }

        .continue-btn {
            padding: 0.5rem 1rem;
        }
    </style>
</head>
<body>
    <div class="cart-container">
        <div class="cart-header">
            <h1 class="cart-title">Shopping Cart</h1>
            <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary continue-btn">
                Continue Shopping
            </a>
        </div>

        <div class="row">
            <div class="col-lg-8">
                @if (Model.CartList.Count()<1)
                {
                    <div class="alert alert-info">Your cart is empty</div>
                }
                else
                {
                    @foreach (var item in Model.CartList)
                    {
                        <div class="cart-item">
                            <img src="~/@item.Product.ImageURL" alt="@item.Product.Name" class="item-image">
                            <div class="item-details">
                                <h3 class="item-name">@item.Product.Name</h3>
                                <p class="item-description">@item.Product.Description</p>
                                <div class="item-price">@item.Product.Price.ToString("C") × @item.Count</div>
                                <div class="item-quantity">
                                    <a asp-action="Minus" asp-route-cartid="@item.Id" class="quantity-btn">-</a>
                                    <span>@item.Count</span>
                                    <a asp-action="Plus" asp-route-cartid="@item.Id" class="quantity-btn">+</a>
                                </div>
                                <a asp-action="Remove" asp-route-cartid="@item.Id" class="remove-btn">
                                    <i class="bi bi-trash"></i> Remove
                                </a>
                            </div>
                        </div>
                    }
                }
            </div>

            <div class="col-lg-4">
                <div class="summary-card">
                    <h3 class="summary-title">Summary</h3>
                    <div class="summary-total">
                        <span>Total (USD)</span>
                        <span>@Model.TotalCarts.ToString("C")</span>
                    </div>
                    <a href="/Customer/Cart/Summary" class="btn btn-primary checkout-btn">Checkout</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>