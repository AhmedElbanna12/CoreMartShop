@model CoreMart.DAL.Models.OrderHeader

@{
    ViewData["Title"] = "الدفع";
}

<h2>@ViewData["Title"]</h2>
<p>الإجمالي المطلوب: @Model.TotalAmount.ToString("C")</p>

<form asp-action="Payment" method="post">
    <input type="hidden" name="orderId" value="@Model.Id" />
    <!-- أضف هنا عناصر الدفع (مثلاً Stripe Elements) -->
    <button type="submit" class="btn btn-success">ادفع الآن</button>
</form>
